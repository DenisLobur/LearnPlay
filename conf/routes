# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET           /                                         controllers.TaskController.index
GET           /taskListBegin1                           controllers.TaskListBegin.taskListBegin1
GET           /getProductArgs                           controllers.TaskListBegin.getProduct(prodName, prodNumber: Int)
GET           /getProduct/:prodName/:prodNumber         controllers.TaskListBegin.getProduct(prodName, prodNumber: Int)
GET           /login1                                   controllers.TaskListBegin.login
GET           /validateLoginGet                         controllers.TaskListBegin.validateLoginGet(username, password)
POST          /validateLoginPost                        controllers.TaskListBegin.validateLoginPost

#GET           /taskList1                controllers.TaskController.taskList1
#GET           /productArgs              controllers.TaskController.product(productType: String, productNum: Int)
#GET           /productArgs2/:type/:num  controllers.TaskController.product(type: String, num: Int)
#+ nocsrf
#POST          /validatePost1            controllers.TaskController.validateLoginPost
#+ nocsrf
#POST          /createUser1              controllers.TaskController.createUser

# Map static resources from the /public folder to the /assets URL path
#GET           /assets/*file             controllers.Assets.versioned(path="/public", file)

# Tasks
#GET           /tasks                    controllers.TaskController.tasks
#POST          /tasks                    controllers.TaskController.newTask
#DELETE        /tasks/:id                controllers.TaskController.deleteTask(id: Int)

