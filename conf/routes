# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET           /                         controllers.TaskController.index
GET           /taskList1                controllers.TaskController.taskList1
GET           /productArgs              controllers.TaskController.product(productType: String, productNum: Int)
GET           /productArgs2/:type/:num  controllers.TaskController.product(type: String, num: Int)
GET           /login1                   controllers.TaskController.login
GET           /validate1                controllers.TaskController.validateLoginGet(username, password)

# Map static resources from the /public folder to the /assets URL path
#GET           /assets/*file             controllers.Assets.versioned(path="/public", file)

# Tasks
#GET           /tasks                    controllers.TaskController.tasks
#POST          /tasks                    controllers.TaskController.newTask
#DELETE        /tasks/:id                controllers.TaskController.deleteTask(id: Int)

# Artists
#GET           /api/artists              controllers.ArtistController.listArtists
#GET           /api/artists/:name        controllers.ArtistController.fetchArtistByName(name)
#GET           /api/search/artist        controllers.ArtistController.search(name:String, country: Option[String])
#POST          /subscribe                controllers.ArtistController.subscribe
#GET           /todoCheck                controllers.ArtistController.todoCheck